<!doctype html>
<%
=begin%>
 <html lang="en" class="color-sidebar sidebarcolor2 color-header headercolor4"> 
<%
=end%>
<html lang="en">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!--favicon-->
		<%= favicon_link_tag 'theme/favicon-32x32.png', rel: 'icon', type: 'image/png' %>
		<!--plugins-->
		<%= stylesheet_link_tag 'plugins', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
		<title>RM Auto – SGI para loja de autos</title>
	</head>

	<body>
		<!--wrapper-->
		<div class="wrapper">
			<%= render partial: 'layouts/shared/navbar' %>
			<%= render partial: 'layouts/shared/header' %>

			<!--start page wrapper -->
			<div class="page-wrapper">
				<div class="page-content">
					<!--breadcrumb-->
					<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
						<div class="breadcrumb-title pe-3">RM AUTO</div>
						<div class="ps-3">
							<nav aria-label="breadcrumb">
								<ol class="breadcrumb mb-0 p-0">
									<li class="breadcrumb-item">
										<%= link_to root_path do %>
											<i class="bx bx-home-alt"></i>
										<% end %>
									</li>
									<li class="breadcrumb-item active" aria-current="page">
										<%= params[:controller].capitalize %> 
										<i class="bx bx-right-arrow-alt"></i> 
										<%= params[:action].capitalize %>
									</li>
								</ol>
							</nav>
						</div>
						<div class="ms-auto">
							<div class="btn-group">
								<button type="button" class="btn btn-primary">Configurações</button>
								<button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">	<span class="visually-hidden">Toggle Dropdown</span>
								</button>
								<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">	<a class="dropdown-item" href="javascript:;">Ação</a>
									<a class="dropdown-item" href="javascript:;">Outra Ação</a>
									<a class="dropdown-item" href="javascript:;">Alguma coisa aqui</a>
									<div class="dropdown-divider"></div>	<a class="dropdown-item" href="javascript:;">Link separado</a>
								</div>
							</div>
						</div>
					</div>
					<!--end breadcrumb-->
					<%= yield %>
				</div>
			</div>
			<!--end page wrapper -->
		</div>
		<!--end wrapper-->
		
		<!--start overlay-->
		<div class="overlay toggle-icon"></div>
		<!--end overlay-->
		<!--Start Back To Top Button--> <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
		<!--End Back To Top Button-->
		<%= render partial: 'layouts/shared/footer' %>
		
		
		
	</body>

</html>