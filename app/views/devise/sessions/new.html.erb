<div class="authentication-header"></div>
<div class="section-authentication-signin d-flex align-items-center justify-content-center my-5 my-lg-0">
  <div class="container-fluid">
    <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-3">
      <div class="col mx-auto">
        <div class="mb-4 text-center">
          <img src="assets/images/logo-img.png" width="180" alt="" />
        </div>
        <div class="card">
          <div class="card-body">
            <div class="p-4 rounded">
              <div class="text-center">
                <h3 class="">RM Auto</h3>
              </div>
              <div class="login-separater text-center mb-4"> <span>INFORME EMAIL E SENHA</span>
                <hr/>
              </div>
              <div class="form-body">

                <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class:"row g-3"}) do |f| %>
                  
                  <div class="col-12">
                    <%= f.label :email, "EndereÃ§o de Email",  class:"form-label" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
                  </div>

                  <div class="col-12">
                    <%= f.label :password, "Informe a senha", class:"form-label" %>
                    <div class="input-group" id="show_hide_password">
                      <%= f.password_field :password, autocomplete: "current-password", class:"form-control border-end-0", placeholder:"Enter Password"  %>
                      <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                    </div>
                  </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="col-md-6">
                        <div class="form-check form-switch">
                          <%= f.check_box :remember_me, class:"form-check-input", checked: true %>
                          <%= f.label :remember_me, "Lembrar-me", class:"form-check-label" %>
                        </div>
                      </div>
                    <% end %>
                    
                    <div class="col-md-6 text-end">	
                      <%= render "devise/shared/links" %>
                    </div>

                    <div class="col-12">
                      <div class="d-grid">
                        <%= f.submit "Log in", class:"btn btn-primary" %>
                      </div>
                    </div>
                
                <% end %>

                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--end row-->
  </div>
</div>